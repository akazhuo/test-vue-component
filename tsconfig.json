// tsconfig.json
{
  "compilerOptions": {
    "target": "ES2020",
    "module": "ESNext",
    "moduleResolution": "Bundler",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "allowSyntheticDefaultImports": true,
    "declaration": false, // 打包库时通常不需要 .d.ts（除非你要提供类型）
    "sourceMap": false
  },
  "include": ["src"]
}